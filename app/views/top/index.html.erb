<div class="main">
  <div class="autoplay">
    <%= image_tag 'maizuru-park.jpg', class: 'main--img' %>
    <%= image_tag 'tenjin.jpg', class: 'main--img' %>
    <%= image_tag 'tenjin-station.jpg', class: 'main--img' %>
  </div>
</div>
<div class="container">
  <section class="news">
    <h2>
      NEWS
    </h2>
    <ul class="news--contents">
      <% @topics.each do |topic| %>
        <li>
          <%= link_to topic_path(topic.id), class: "news--contents--a" do %>
            <span class="news-date"><%= topic.created_at.strftime("%Y.%m.%d") %></span>
            <span><%= topic.title %></span>
            <i class="fa fa-caret-right"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div class="btn">
      <div class="btn-content">
        <div class="btn-hover"></div>
        <%= link_to "read more", topics_path, class: "btn--readmore" %>
      </div>
    </div>
  </section>

  <section class="event">
    <h2>
      EVENT
    </h2>
    <ul>
      <% @events.each do |event| %>
        <li>
          <%= link_to event_path(event.id), class: "event--box" do %>
            <div class="before">read more</div>
            <div class="event-image">
              <% unless event.e_image.blank? %>
                <%= image_tag event.e_image.url %>
              <% else %>
                <div class="no-image">
                  <p>NO IMAGE</p>
                </div>
              <% end %>
            </div>
            <div class="event-date">
              <p class="round-date"><%= event.created_at.strftime("%Y") %><br><%= event.created_at.strftime("%m.%d") %></p>
            </div>
            <div class="contents">
              <p class="contents--title"><%= event.e_title %></p>
              <p><%= event.host %><br><%= event.place %></p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div class="btn">
      <div class="btn-content">
        <div class="btn-hover"></div>
        <%= link_to "read more", events_path, class: "btn--readmore" %>
      </div>
    </div>
  </section>
</div>
